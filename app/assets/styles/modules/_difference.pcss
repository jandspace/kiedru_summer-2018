.field-item {
	.section--difference {
		.difference {
			.flex-item {
				flex: 0 0 50%;
				max-width: 50%;
				padding-top: 0;
				padding-bottom: 0;

				@mixin sm-min {
					flex: 0 0 25%;
					max-width: 25%;
				}

				.item-box {
					text-align: center;

					.desc {
						padding: 10px 15px;
						font-size: 15px;
					}
				}

			}
		}
	}
}