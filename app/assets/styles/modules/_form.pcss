.language-dir-rtl {
	section {
		&.block-webform {
			.webform-client-form {
				fieldset {
					.webform-datepicker .form-type-select select,
					.webform-component select {
						background-position: 9px center;
						padding-right: 12px;
						padding-left: 33px
					}
					.webform-datepicker .form-type-select::before,
					.webform-component-select::before {
						right: auto;
						left: 29px
					}
					.webform-datepicker .form-type-select {
						float: right
					}
					.webform-datepicker .form-type-select::before {
						right: auto;
						left: 31px
					}
					.webform-datepicker .webform-calendar-icon {
						float: right
					}
					.webform-component {
						float: right
					}

					@mixin xs-max {
						.webform-datepicker .form-type-select .form-select {
							padding-right: 7px;
							padding-left: 16px;
							background-position: 4px center
						}
					}
					@mixin lg-min {
						.webform-datepicker .form-type-select .form-select {
							padding-left: 30px;
							padding-right: 8px
						}
						.left-component {
							margin-right: 0;
							margin-left: 6%
						}
					}
					@mixin md-only {
						.left-component {
							margin-right: 0;
							margin-left: 2%
						}
					}

					@mixin md-min {
						.webform-client-form > div >.webform-component-checkboxes {
							text-align: left
						}
						.webform-client-form > div >.webform-component-checkboxes label.option {
							padding-right: 0;
							padding-left: 30px
						}
					}
				}

				.form-group {
					&.form-item {						
						label {
							input[type="checkbox"],
							input[type="radio"] {
								left: auto;
								right: 0;
								margin-left: auto;
								margin-right: 0;
							}
						}
					}
				}

				.webform-submit {
					float: left
				}
			}
		}
	}
}


